.PHONY: docs

all: lint unittest

docs:
	cd docs && make html

lint:
	flake8 go2pod
	pylint go2pod

unittest: pytest

pytest:
	pytest

test: lint unittest

clean:
	find . -name "*~" -exec rm -f {} \;
	find . -name "*.pyc" -exec rm -f {} \;
	find . -name "*flymake.py" -exec rm -f {} \;
	find . -name "\#*.py\#" -exec rm -f {} \;
	find . -name ".\#*.py\#" -exec rm -f {} \;
	find . -name __pycache__ -delete
